<h1 class="display-1">{{{ Username }}}'s Gearbag</h1>
<div class="gear-body">
    <form class="gear-form" action="/action_page.php">

    <div class="form-group">
    <label for="iname">Name of item:</label><br>
    <input class="form-control" type="text" id="name" name="name"><br>
    </div>
    <div class="form-group">
    <label for="description">Item Description:</label><br>
    <input class="form-control" type="text" id="desc" name="desc">
    </div>
    <br><br>
    <input type="radio" id="campsite" name="tag" value="Campsite">
    <label for="campsite">Campsite</label><br>
    <input type="radio" id="tools" name="tag" value="Tools">
    <label for="tools">Tools + Reapirs</label><br>
    <input type="radio" id="kitchen" name="tag" value="Kitchen">
    <label for="kitchen">Kitchen</label><br>
    <input type="radio" id="health" name="tag" value="Health">
    <label for="health">Health + Hygeine</label><br>
    <button type="button" class="btn btn-primary" id="add-gear" class="btn1">Add Gear</button>
    </form>

    <div>
        <h3>Current Gearbag:</h3>
        <ul>
        {{#each updatedGear}}
        <li>
            {{> user-gear gear}}
        </li>            
        {{/each}}
        </ul>
    </div>

</div>